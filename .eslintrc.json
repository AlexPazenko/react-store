{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "@typescript-eslint/explicit-function-return-type": "off", // Allows to use function without return
        "@typescript-eslint/strict-boolean-expressions": 0, // Allows to use conditional statements like "if (someData)" intead of "if (someData === true)"
        "@typescript-eslint/restrict-plus-operands": 0, // Allows to use concatenation like "url += number"
        "@typescript-eslint/space-before-function-paren": ["error", "never"], // Delete space between function and ()
        "@typescript-eslint/semi": [2, "always"], // Always requires semicolons at the end of statements
        "@typescript-eslint/no-floating-promises": 0
    }
}
